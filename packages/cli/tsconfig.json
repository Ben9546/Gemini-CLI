{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020", "ES2022.Intl"],
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "./package.json"
  ],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "references": [{ "path": "../core" }]
}
