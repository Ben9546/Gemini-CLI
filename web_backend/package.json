{
  "name": "gemini-cli-web-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch './src/**/*.ts' --exec 'ts-node' src/server.ts",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "express": "^4.19.2",
    "@google/gemini-cli-core": "file:../packages/core"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.2",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@google/gemini-cli-core$": "<rootDir>/../packages/core/src/index.ts",
      "^../src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
